@using Application.Models

@if (ErrorList != null)
{
    <ul class="error-messages">
        @foreach (var error in ErrorList)
        {
            <li>
                @error.Key @String.Join(" ", @error.Value)
            </li>
        }
    </ul>
}


@code {
    [Parameter]
    public Dictionary<string, string[]> ErrorList { get; set; }
}
